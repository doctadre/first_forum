<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @topic.title %>
</p>
<p>
  <b>Created By:</b>
  <%= link_to @topic.user.username, @topic.user if @topic %>
</p>

<table>
<tr>
	<th>Post</th>
	<th>Creator</th>
</tr>
<% @topic.posts.each do |post| %>
<tr>
	<td><%= post.body if post %></td>
	<td><%= post.user.username if post %></td>
	<td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>
<%= link_to 'New Post', new_post_path %> |
<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back to Forum', @topic.forum %>
