<p>
  <h1><b>Title:</b>
  <%= @topic.title %></h1>
</p>
<p>
  <h2><b>Created By:</b>
  <%= link_to @topic.user.username, @topic.user if @topic %></h2>
</p>

<table>
<tr>
	<th>Post</th>
	<th>Creator</th>
</tr>
<% @topic.posts.each do |post| %>
<tr>
	<td><%= post.body%></td>
	<td><%= link_to post.user.username, post.user%></td>
	<% if signed_in? %>
		<% if current_user?(User.find(post.user_id)) %>
		<td><%= link_to 'Edit', edit_forum_topic_post_path(@topic.forum, @topic, post) %></td>
		<td><%= link_to 'Destroy', [@topic.forum, @topic, post], :confirm => 'Are you sure?', :method => :delete %></td>
		<% end %>
	<% end %>
</tr>
<% end %>
</table>

<% if signed_in? %>
<%= link_to 'New Post', new_forum_topic_post_path(@topic.forum, @topic) %> |
	<% if current_user?(User.find(@topic.user_id)) %>
	<%= link_to 'Edit', edit_forum_topic_path(@topic.forum, @topic) %> |
	<% end %>
<% end %>
<%= link_to 'Back to Forum', @topic.forum %>
