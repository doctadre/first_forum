<h1>Forums</h1>

<table>
  <tr>
    <th>Title</th>
	<th>Creator</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%= link_to forum.title, forum %></td>
	<td><%= link_to forum.user.username, forum.user if forum.user %></td>
	<% if signed_in? %>
		<% if current_user?(User.find(forum.user_id)) %>
			<td><%= link_to 'Edit', edit_forum_path(forum) %></td>
			<td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
		<% end %>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Forum', new_forum_path %>
